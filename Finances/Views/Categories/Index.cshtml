@model IEnumerable<Finances.Models.Entities.Category>

@{
    ViewBag.Title = "Categoriaas";
}

<h2>Categorias</h2>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger center-block" role="alert">
        @TempData["error"]
    </div>
}
<p>
    <a href="/Categories/New" class="btn btn-primary">Nova Categoria</a>
</p>
<table class="table">
    <tr>
        <th>Nome</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.name
        </td>
        <td>
            <a href="/Categories/Edit/@item.id" class="btn btn-success">Editar</a>
            <a href="/Categories/Delete/@item.id" class="btn btn-danger">Deletar</a>
        </td>
    </tr>
}

</table>
