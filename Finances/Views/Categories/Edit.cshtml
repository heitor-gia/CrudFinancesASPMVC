@model Finances.Models.Entities.Category
@{
    ViewBag.Title = "Editar Categoria";
}

<h2>Editar categoria</h2>
<form method="post" action="/Categories/Edit">


    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="name">Nome:</label>
            <input type="text" name="name" placeholder="Nome" class="form-control" value="@Model.name" />
        </div>

        <div class="form-group">
            <input type="hidden" value="@Model.id" name="id" />
            <input type="hidden" value="@Model.id_user" name="id_user" />
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>

    </div>
</form>
