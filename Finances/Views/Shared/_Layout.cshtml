<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Finanças", "Index", "Expenses", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav  navbar-right">
                    @if (!(Session["loggedIn"] != null))
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                        <li>@Html.ActionLink("Registrar-se", "Register", "Home")</li>
                    }
                    else
                    {

                        <li>@Html.ActionLink("Despesas", "Index", "Expenses")</li>
                        <li>@Html.ActionLink("Categorias", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Estabelecimentos", "Index", "Establishments")</li>
                        <li>@Html.ActionLink("Sair", "Logout", "Home")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Desenvolvido por <a href="http://www.github.com/heitor-gia">Heitor Gianastasio</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
