@model Finances.Models.Entities.User
@{
    ViewBag.Title = "Login";
}

<h2 class="text-center">Login</h2>
<form action="/Home/Login" method="post">
    
   @if (ViewBag.erro != null)
   {
    <div class="alert alert-danger toast center-block" role="alert">
        @ViewBag.erro
    </div>
   }
    <div class="form-horizontal text-center">
        
        <div class="form-group ">
            <input class="form-control center-block" type="text" name="name" placeholder="Usuário" />
        </div>
        <div class="form-group">
            <input class="form-control  center-block" type="password" name="password" placeholder="Senha" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Entrar"/>
            <a href="/Home/Register" class="btn btn-success">Cadastrar-se</a>
        </div>
    </div>
</form>

